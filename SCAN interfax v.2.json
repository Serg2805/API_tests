	"item": [
		{
			"name": "Authorization",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Response Status code from \"/api/v1/account/login\" with correct data is 200', function () {",
							"    pm.response.to.have.status(200)",
							"    ",
							"    const responseJsonData = pm.response.json();",
							"    pm.environment.set(\"accessToken\", responseJsonData.accessToken);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"login\": \"{{test_login}}\",\n  \"password\": \"{{test_password}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://gateway.scan-interfax.ru/api/v1/account/login",
					"protocol": "https",
					"host": [
						"gateway",
						"scan-interfax",
						"ru"
					],
					"path": [
						"api",
						"v1",
						"account",
						"login"
					]
				}
			},
			"response": []
		},
